<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/monster_animation_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/monster_animation"
            />

        <ImageView
            android:id="@+id/wait_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_more_horiz_black_24dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="20"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="100"
        >

        <ImageView
            android:id="@+id/replayButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:backgroundTint="#ffffff"
            android:src="@drawable/ic_autorenew_black_24dp"
            />

        <ImageView
            android:id="@+id/first_Ball"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:backgroundTint="#ffffff"
            android:src="@drawable/ball1"
            android:onClick="ball_click"
            />

        <ImageView
            android:id="@+id/second_Ball"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:backgroundTint="#ffffff"
            android:src="@drawable/ball2"
            android:onClick="ball_click"
            />

        <ImageView
            android:id="@+id/third_Ball"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:backgroundTint="#ffffff"
            android:src="@drawable/ball3"
            android:onClick="ball_click"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:backgroundTint="#ffffff"
            android:src="@drawable/ic_folder_black_24dp"
            />
    </LinearLayout>


</LinearLayout>